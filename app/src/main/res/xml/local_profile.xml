<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:name="Username"
        android:summary="Username for your account"
        android:defaultValue=""
        android:title="Enter your username"
        android:key="username" />
    <EditTextPreference
        android:name="Password"
        android:summary="Password for your SIP account"
        android:defaultValue=""
        android:title="Enter your password"
        android:key="password" />

    <EditTextPreference
        android:name="Server"
        android:summary="Server name"
        android:defaultValue=""
        android:title="Enter server name"
        android:key="server" />
</PreferenceScreen>